<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_base_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_alignParentBottom="true" >

    <ImageView
        android:id="@+id/iv_base_cover"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_default_art" />

    <ProgressBar
        android:id="@+id/probar_base_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_base_cover"
        android:max="100"
        android:progress="50" />

    <TextView
        android:id="@+id/tv_base_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/probar_base_progress"
        android:layout_below="@id/probar_base_progress"
        android:text="song" />

    <TextView
        android:id="@+id/tv_base_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_base_song"
        android:layout_below="@id/tv_base_song"
        android:text="singer" />

    <ImageView
        android:id="@+id/iv_base_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="20dp"
        android:src="@drawable/ic_next" />

    <ImageView
        android:id="@+id/iv_base_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/iv_base_next"
        android:src="@drawable/ic_pause" />

    <ImageView
        android:id="@+id/iv_base_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/iv_base_pause"
        android:src="@drawable/ic_previous" />

</RelativeLayout>