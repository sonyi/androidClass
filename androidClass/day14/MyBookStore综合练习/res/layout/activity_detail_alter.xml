<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <TextView
        android:id="@+id/tv_alter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="书名：" />

    <EditText
        android:id="@+id/et_alter_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLength="100"
        android:layout_alignBottom="@id/tv_alter_title"
        android:layout_toRightOf="@id/tv_alter_title" />

    <TextView
        android:id="@+id/tv_alter_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_alter_title"
        android:layout_below="@id/tv_alter_title"
        android:layout_marginTop="20dp"
        android:text="作者：" />

    <EditText
        android:id="@+id/et_alter_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLength="50"
        android:layout_alignBottom="@id/tv_alter_author"
        android:layout_toRightOf="@id/tv_alter_author" />

    <TextView
        android:id="@+id/tv_alter_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_alter_author"
        android:layout_below="@id/tv_alter_author"
        android:layout_marginTop="20dp"
        android:text="出版日期：" />

    <EditText
        android:id="@+id/et_alter_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLength="20"
        android:layout_alignBottom="@id/tv_alter_date"
        android:layout_toRightOf="@id/tv_alter_date"
        android:inputType="date" />

    <TextView
        android:id="@+id/tv_alter_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_alter_date"
        android:layout_below="@id/tv_alter_date"
        android:layout_marginTop="20dp"
        android:text="页数：" />

    <EditText
        android:id="@+id/et_alter_pages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLength="10"
        android:inputType="number"
        android:layout_alignBottom="@id/tv_alter_pages"
        android:layout_toRightOf="@id/tv_alter_pages" />

    <TextView
        android:id="@+id/tv_alter_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_alter_pages"
        android:layout_below="@id/tv_alter_pages"
        android:layout_marginTop="20dp"
        android:text="价格：" />

    <EditText
        android:id="@+id/et_alter_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLength="10"
        android:inputType="number"
        android:layout_alignBottom="@id/tv_alter_price"
        android:layout_toRightOf="@id/tv_alter_price" />

    <TextView
        android:id="@+id/tv_alter_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_alter_price"
        android:layout_below="@id/tv_alter_price"
        android:layout_marginTop="20dp"
        android:text="详细信息：" />

    
    
    <EditText
        android:id="@+id/et_alter_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="10"
        android:layout_below="@id/tv_alter_description"
        android:layout_marginLeft="10dp" />

    
    <Button
        android:id="@+id/btn_alter_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_alter_description"
        android:layout_marginLeft="40dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="确定" />

    <Button
        android:id="@+id/btn_alter_quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn_alter_ok"
        android:layout_toRightOf="@id/btn_alter_ok"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="取消" />

</RelativeLayout>