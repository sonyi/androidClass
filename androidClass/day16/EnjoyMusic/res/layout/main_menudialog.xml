<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TableRow
    android:id="@+id/menu1"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp"
    > 
    <ImageView 
  			android:id="@+id/the_image1"	
  		    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_icon_refresh_lib"
            />
    
    <TextView 
        android:id="@+id/the_text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:text="刷新音乐列表"   />
    
     </TableRow>
     
    
   <TableRow
    android:id="@+id/menu2"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp"
    > 
    <ImageView 
  			android:id="@+id/the_image2"	
  		    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_report"
            />
    
    <TextView 
        android:id="@+id/the_text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:text="软件详情"   />
    
     </TableRow>
     
   
    <TableRow
    android:id="@+id/menu3"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp"
    > 
    <ImageView 
  			android:id="@+id/the_image3"	
  		    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_icon_exit"
            />
    
    <TextView 
        android:id="@+id/the_text3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:text="退出软件"   />
    
     </TableRow>
     
    
</LinearLayout>