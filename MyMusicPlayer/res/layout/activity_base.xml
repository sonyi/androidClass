<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_base_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_alignParentBottom="true" >

    <ImageView
        android:id="@+id/iv_base_cover"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_default_art" />

    <SeekBar
        android:id="@+id/seekbar_base_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:thumb="@drawable/ic_seekbar_draw"
        android:layout_toRightOf="@id/iv_base_cover"
        android:max="100"
        android:progress="50" />

    <TextView
        android:id="@+id/tv_base_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/seekbar_base_progress"
        android:layout_below="@id/seekbar_base_progress"
        android:singleLine="true"
        android:width="90dp"
        android:text="song" />

    <TextView
        android:id="@+id/tv_base_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_base_song"
        android:layout_below="@id/tv_base_song"
         android:singleLine="true"
        android:width="90dp"
        android:text="singer" />

    <ImageView
        android:id="@+id/iv_base_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
       
        android:src="@drawable/ic_next" />

    <ImageView
        android:id="@+id/iv_base_pause"
        android:layout_width="40dp"
        android:layout_height="40dp"
       android:layout_alignTop="@id/iv_base_next"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/iv_base_next"
        android:src="@drawable/ic_play" />

    <ImageView
        android:id="@+id/iv_base_previous"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/iv_base_pause"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/iv_base_pause"
        android:src="@drawable/ic_previous" />

</RelativeLayout>