<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv_fragment_album_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_default_art" />

    <RelativeLayout
        android:id="@+id/rel_album_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_fragment_album_img"
        android:layout_below="@id/iv_fragment_album_img" >

        <TextView
            android:id="@+id/tv_fragment_album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="title"
            android:width="100dp" />

        <TextView
            android:id="@+id/tv_fragment_album_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_fragment_album_title"
            android:layout_below="@id/tv_fragment_album_title"
            android:singleLine="true"
            android:text="artist"
            android:width="100dp" />

        <ImageView
            android:id="@+id/iv_fragment_album_overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_action_overflow" />
    </RelativeLayout>

</RelativeLayout>