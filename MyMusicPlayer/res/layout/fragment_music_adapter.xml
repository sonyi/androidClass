<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/iv_fragment_music_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:src="@drawable/ic_default_art" />

    <TextView
        android:id="@+id/tv_fragment_music_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_fragment_music_img"
        android:layout_toRightOf="@id/iv_fragment_music_img"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:width="230dp" />

    <TextView
        android:id="@+id/tv_fragment_music_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_fragment_music_title"
        android:layout_below="@id/tv_fragment_music_title"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:width="230dp" />

    <ImageView
        android:id="@+id/iv_fragment_overflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_action_overflow" />

</RelativeLayout>